<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              style="@style/Widget.KeGOWidget.AppWidget.Container"
              android:theme="@style/Theme.KeGOWidget.AppWidgetContainer"
              android:background="@color/purple_200"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            style="@style/Widget.KeGOWidget.AppWidget.InnerView"
            android:id="@+id/appwidget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/appwidget_text"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"/>

    <TextView
            style="@style/Widget.KeGOWidget.AppWidget.InnerView"
            android:id="@+id/appwidget_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/appwidget_text"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"/>
</LinearLayout>
