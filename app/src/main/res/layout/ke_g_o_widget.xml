<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              style="@style/Widget.KeGOWidget.AppWidget.Container"
              android:theme="@style/Theme.KeGOWidget.AppWidgetContainer"
              android:id="@+id/layout_wrapper"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="1">
        <TextView
                style="@style/Widget.KeGOWidget.AppWidget.InnerView"
                android:id="@+id/appwidget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/appwidget_title"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_margin="8dp"/>
        <TextView
                style="@style/Widget.KeGOWidget.AppWidget.InnerView"
                android:id="@+id/appwidget_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="-12dp"
                android:layout_marginHorizontal="8dp"/>
        <TextView
                style="@style/Widget.KeGOWidget.AppWidget.InnerView"
                android:id="@+id/appwidget_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="0dp"
                android:layout_marginHorizontal="8dp"/>
        <Button
                android:id="@+id/change_btn"
                android:text="@string/rndm_target"
                android:backgroundTint="@color/teal_200"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="100sp"
                android:onClick="confirmConfiguration"
        />
    </LinearLayout>
</RelativeLayout>
